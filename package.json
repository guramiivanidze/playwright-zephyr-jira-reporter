{
  "name": "@gurglosa/playwright-zephyr-jira-reporter",
  "version": "1.0.3",
  "description": "A custom Playwright reporter that syncs test results to Zephyr Scale and creates Jira bugs on failures.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "npx playwright test",
    "test2": "npx playwright test --reporter=playwright-zephyr-jira-reporter"
  },
  "keywords": [
    "playwright",
    "reporter",
    "zephyr",
    "jira",
    "automation",
    "test"
  ],
  "author": "Gurami Ivanidze",
  "license": "MIT",
  "peerDependencies": {
    "playwright": "^1.52.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.14.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guramiivanidze/playwright-zephyr-jira-reporter.git"
  },
  "bugs": {
    "url": "https://github.com/guramiivanidze/playwright-zephyr-jira-reporter/issues"
  },
  "homepage": "https://github.com/guramiivanidze/playwright-zephyr-jira-reporter#readme",
  "dependencies": {
    "axios": "^1.8.4",
    "dotenv": "^16.5.0"
  }
}
